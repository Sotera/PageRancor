extends /modules/core/views/layouts/layout
block content
   .row
      .col-md-6.col-md-offset-3
         form(role='form', action='/api/rank/look_ahead', method='post')
            .form-group
               label(for='urlRankRequest')
               input#username.form-control(type='text', name='urlRankRequest', value='{"dwTrailUrlId":"testId","requester":"jabba","urls":["http://www.dccomics.com/characters/batman"],"terms":["batman","joker"]           }')
            button.btn.btn-default(type='submit') Submit
         br

         div(style="width:600px; height:500px")
            rank-chart(style="width: 600px; height: 500px; border: 1px solid lightgray;")
            pre(id="eventSpan")
            button.btn.btn-default Refresh
            form(role='form', action='/api/rank/destroy', method='get')
               button.btn.btn-default(type='submit') Destroy all data
            br
